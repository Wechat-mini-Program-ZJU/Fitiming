/* components/TimeFormCard.wxss */
.container {
    display: flex;
    flex-direction: row;
    padding: 30rpx;
    background-color: white;
    border-radius: 10rpx;
    height: 200rpx;
    align-items: center;
}

.left {
    display: flex;
    flex-direction: column;
}

.form-name {
    margin-bottom: 20rpx;
    font-size: 40rpx;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 400rpx;
}

.status {
    font-size: 30rpx;
}

.middle-line {
    background: #DDD;
    width: 1.5px;
    height: 120rpx;
    margin-left: 20rpx;
    margin-right: 40rpx;
}

.right {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.count {
    color: #33C2FC;
    font-size: 45rpx;
    margin-bottom: 20rpx;
}